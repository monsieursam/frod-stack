{
	"name": "boilerplate-react-router-trpc-drizzle",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"database:push": "cd packages/database && npx drizzle-kit push",
		"database:generate": "cd packages/database && npx drizzle-kit generate",
		"database:migrate": "cd packages/database && npx drizzle-kit migrate",
		"auth:generate": "cd packages/auth && npx @better-auth/cli generate --output ../database/src/auth-schema.ts",
		"check-types": "turbo run check-types"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@types/pg": "^8.15.4",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"turbo": "^2.5.5",
		"typescript": "5.8.2"
	},
	"engines": {
		"node": ">=18"
	},
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"packageManager": "npm@10.8.2",
	"dependencies": {
		"@orpc/client": "^1.6.8",
		"@orpc/server": "^1.6.8",
		"@orpc/tanstack-query": "^1.6.8",
		"@tanstack/react-query": "^5.81.2",
		"@trpc/client": "^11.4.2",
		"@trpc/react-query": "^11.4.2",
		"@trpc/server": "^11.4.2",
		"better-auth": "^1.2.12",
		"dotenv": "^17.2.0",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.2",
		"pg": "^8.16.2",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"zod": "^3.25.67"
	}
}
